.joystick-root {
    position: absolute;
    left: 3%;
    bottom: 3%;
    width: 22%;
    height: 22%;
}

.joystick-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(255,255,255,0.15);
    border-radius: 50%;
}

.joystick-handle {
    position: absolute;
    width: 40%;
    height: 40%;
    left: 30%;
    top: 30%;
    background-color: rgba(255,255,255,0.35);
    border-radius: 50%;
}
